{% extends 'base.html.twig' %}

{% block body %}
    <h1>Leilao</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ leilao.id }}</td>
            </tr>
            <tr>
                <th>Datainicio</th>
                <td>{% if leilao.datainicio %}{{ leilao.datainicio|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Tempoleilao</th>
                <td>{% if leilao.tempoleilao %}{{ leilao.tempoleilao|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_leilao_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_leilao_edit', { 'id': leilao.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
